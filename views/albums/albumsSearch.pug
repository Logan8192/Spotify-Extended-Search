extends ../layout
include ../shared/searchbar/searchBarMixin
include ../shared/card/cardMixins

block content
    section.section
        div.container
            +searchBar("/albums", "Search Albums")
            if searchResults
                if searchResults.length === 0
                      article.message.is-warning
                        div.message-header
                            p Warning
                        div.message-body No albums were found with your search criteria
                div.columns.is-multiline
                    each album in searchResults
                        div.column.is-3
                            div.card
                                +cardImage("/albums/" + album.id, album.images, "Album Image")
                                div.card-content
                                    div.media-content
                                        p.title.is-4= album.name
                                    div.content
                                        div.tags.are-medium
                                            div.tag.is-info.is-capitalized
                                                span.icon
                                                    i.fas.fa-compact-disc
                                                span= album.album_type
                                            div.tag.is-info
                                                span.icon
                                                    i.far.fa-calendar
                                                span= new Date(album.release_date).getFullYear()
                                        div
                                            if album.artists.length === 1
                                                p.title.is-5 Artist:
                                            else if album.artists.length > 1
                                               p.title.is-5 Artists:
                                            div.buttons
                                                each artist in album.artists
                                                    a.button.is-info.is-fullwidth.is-block(href="artists/" + artist.id)
                                                        span.icon
                                                            i.fas.fa-users
                                                        span= artist.name
