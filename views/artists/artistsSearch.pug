extends ../layout
include ../shared/searchbar/searchBarMixin

block content
    section.section
        div.container
            +searchBar("/artists", "Search Artists")
            if searchResults
                if searchResults.length === 0
                      article.message.is-warning
                        div.message-header
                            p Warning
                        div.message-body No artists were found with your search criteria
                div.columns.is-multiline
                    each artist in searchResults
                        div.column.is-desktop.is-3
                            div.card
                                a(href="/artists/" + artist.id)
                                    div.card-image
                                        figure.image.is-square
                                            if artist.images[0]
                                                img(src=artist.images[0].url, alt="Artist Image")
                                            else
                                                img(src="https://dummyimage.com/640x640/000/fff.jpg&text=No+Image", alt="Artist Image")
                                div.card-content
                                    div.media-content
                                        p.title.is-4= artist.name
                                    div.content
                                        div.tags
                                            each genre in artist.genres
                                                span.tag.is-info= genre
