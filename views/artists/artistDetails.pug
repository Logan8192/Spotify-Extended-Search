extends ../layout

block content
    section.section
        div.container
            div.columns.is-vcentered
                div.column.is-narrow
                    figure.image.is-128x128
                        img.is-rounded(src=artist.info.images[0].url)
                div.column
                    h1.title.is-1.has-text-light #{artist.info.name}
                        span.tag.is-info.is-medium.is-capitalized #{artist.info.type}
                    div.columns
                        div.column
                            a.button.is-success(href=artist.info.external_urls.spotify, target="_blank")
                                span.icon
                                    i.fab.fa-spotify
                                span Open on Spotify

    if artist.info.genres.length > 0
        section.section
            div.container
                h2.title.is-2.has-text-light Genres
                    div.tags
                        each genre in artist.info.genres
                            span.tag.is-large.is-primary.is-capitalized= genre

    section.section
        div.container
            h2.title.is-2.has-text-light Discography
                if artist.discography.albums.length > 0
                    h3.title.is-3.has-text-light Albums
                    div.columns.is-multiline
                        each album in artist.discography.albums
                            include includes/discsCardDeck
                if artist.discography.singles.length > 0
                    h3.title.is-3.has-text-light Singles
                    div.columns.is-multiline
                        each album in artist.discography.singles
                            include includes/discsCardDeck
                if artist.discography.compilations.length > 0
                    h3.title.is-3.has-text-light Compilations
                    div.columns.is-multiline
                        each album in artist.discography.compilations
                            include includes/discsCardDeck
                if artist.discography.appears_on.length > 0
                    h3.title.is-3.has-text-light Appears On
                    div.columns.is-multiline
                        each album in artist.discography.appears_on
                            include includes/discsCardDeck
