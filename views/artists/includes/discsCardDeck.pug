div.column.is-3
    div.card
        a(href="/albums/" + album.id)
            div.card-image
                figure.image.is-square
                    if album.images
                        img(src=album.images[0].url, alt="Album Image")
                    else
                        img(src="https://dummyimage.com/640x640/000/fff.jpg&text=No+Album+Cover", alt="Album Image")
        div.card-content
            div.media-content
                h5.title.is-5= album.name
            div.content
                div.tags.are-medium
                    div.tag.is-info.is-capitalized
                        span.icon
                            i.fas.fa-compact-disc
                        span= album.album_type
                    div.tag.is-info
                        span.icon
                            i.fas.fa-globe
                        span #{album.available_markets.length} countries
                    div.tag.is-info
                        span.icon
                            i.far.fa-calendar
                        span= new Date(album.release_date).getFullYear()
        footer.card-footer
            a.card-footer-item(href=album.external_urls.spotify, target="_blank")
                span.icon
                    i.fab.fa-spotify
                span Open on Spotify