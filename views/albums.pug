extends layout

block content
    section.section
        div.container
            div.columns.is-centered
                div.column.is-half
                    form(action="/albums", method="get")
                        div.field.has-addons.is-horizontal
                            div.control.is-expanded
                                input.input(type="text", name="name", placeholder="Search Album")
                            div.control
                                input.button.is-link(type="submit" value="Search")
            if searchResults
                if searchResults.length === 0
                      article.message.is-warning
                        div.message-header
                            p Warning
                        div.message-body No albums were found with your search criteria
                div.columns.is-multiline
                    each album in searchResults
                        div.column.is-3                                           
                            div.card
                                a(href="/album/" + album.id)
                                    div.card-image
                                        figure.image.is-square
                                            if album.images[0]
                                                img(src=album.images[0].url, alt="Album Image")
                                            else
                                                img(src="https://dummyimage.com/640x640/000/fff.jpg&text=No+Image", alt="Album Image")
                                div.card-content
                                    div.media-content
                                        p.title.is-4= album.name
                                    div.content 
                                        div.tags.are-medium 
                                            div.tag.is-info.is-capitalized
                                                span.icon
                                                    i.fas.fa-compact-disc
                                                span= album.album_type
                                            div.tag.is-info
                                                span.icon
                                                    i.far.fa-calendar
                                                span= new Date(album.release_date).getFullYear()
                                        div
                                            p.title.is-5 Artist(s):
                                            div.buttons
                                                each artist in album.artists
                                                    a.button.is-info(href="artist/" + artist.id) 
                                                        span.icon
                                                            i.fas.fa-users 
                                                        span= artist.name

                                        

