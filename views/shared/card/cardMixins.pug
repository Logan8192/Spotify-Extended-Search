mixin cardFooter(href)
    footer.card-footer
        a.card-footer-item(href=href, target="_blank")
            span.icon
                i.fab.fa-spotify
            span= t('common:open_on_spotify')

mixin cardImage(href, imageUrl, imgAlt)
    div.card-image
        a(href=href)
            figure.image.is-square
                if imageUrl[0]
                    img(src=imageUrl[0].url, alt=imgAlt)
                else
                    img(src="https://dummyimage.com/640x640/000/fff.jpg&text=No+Image", alt=imgAlt)

mixin featureCard(iconClass, title, content)
    div.column.is-3
        div.card
            div.card-content.has-text-centered
                div.content
                    span.icon.mt-3
                        i(class=iconClass)
                    p.title.is-4.mt-3= title
                    p= content
