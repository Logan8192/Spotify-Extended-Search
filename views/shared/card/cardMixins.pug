mixin cardFooter(href)
    footer.card-footer
        a.card-footer-item(href=href, target="_blank")
            span.icon
                i.fab.fa-spotify
            span Open on Spotify

mixin cardImage(href, imageUrl, imgAlt)
    div.card-image
        a(href=href)
            figure.image.is-square
                if imageUrl
                    img(src=imageUrl[0].url, alt=imgAlt)
                else
                    img(src="https://dummyimage.com/640x640/000/fff.jpg&text=No+Image", alt=imgAlt)
