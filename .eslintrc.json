{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true,
        "mocha": true
    },
    "extends": [
        "airbnb-base",
        "plugin:node/recommended",
        "prettier"
    ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "overrides": [
        {
            "files": "*.test.js",
            "rules": {
                "no-unused-expressions": "off"
            }
        }
    ],
    "rules": {
        "consistent-return": "off"
    }
}
